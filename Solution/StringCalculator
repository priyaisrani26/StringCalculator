package Solution;

public class StringCalculator{
  public int Add(String numbers) {
	  String[] numbersArray = numbers.split(",");
	  int sum = 0;
	  
	  if(numbers.isEmpty()) {
		  return 0;
	  }
	  if(numbers.length() == 1) {
		  return Integer.parseInt(numbers);
	  }
	  sum = Integer.parseInt(numbersArray[0]) + Integer.parseInt(numbersArray[1]);
	  return sum;
	  }
  }
	


